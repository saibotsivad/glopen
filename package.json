{
  "name": "glopen",
  "version": "0.0.0",
  "private": true,
  "description": "Mono repo for the glopen CLI and reusable routes and controllers.",
  "type": "module",
  "scripts": {
    "test": "pnpm recursive run test",
    "integration": "run-p --race integration:*",
    "integration:database": "memgo --keys abc123 --apiPort 5013 --mongodbPort 27018",
    "integration:suite": "export MONGODB_API_KEY=abc123 && export MONGODB_API_URL=http://localhost:5013 && export API_URL=http://localhost:3001 && cd integration-test && pnpm run start",
    "integration:server": "export MONGODB_API_KEY=abc123 && export MONGODB_API_PORT=5013 && export PORT=3001 && cd example/simple-user && pnpm run start",
    "prepare": "run-p prepare:*",
    "prepare:modules": "pnpm recursive run prepare",
    "prepare:definition-dist": "node script/build-definition-dist.js",
    "prepare:definition-readme": "node script/build-definition-readme.js",
    "prepare:shared-readme": "node script/build-shared-readme.js",
    "prepare:copy-license": "node script/copy-license-to-folders.js",
    "prepare:normalize-pkg": "node script/normalize-definition-package-json-files.js",
    "make": "pnpm run prepare && run-p make:*",
    "make:recursive": "pnpm recursive run run build",
    "old": "-----------------------",
    "build-demo": "mkdir -p example/build && node bin.js -c",
    "postbuild-demo": "node example/openapijson.js && ajv-openapi-compile --definition example/build/generated.json --output example/build/schemas.cjs",
    "start-advanced": "node example/polka-ajv.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/saibotsivad/glopen.git"
  },
  "license": "SEE LICENSE IN LICENSE.md",
  "bugs": {
    "url": "https://github.com/saibotsivad/glopen/issues"
  },
  "homepage": "https://github.com/saibotsivad/glopen",
  "devDependencies": {
    "@saibotsivad/eslint-config-saibotsivad": "^0.0.4",
    "@tsconfig/recommended": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "eslint": "^8.1.0",
    "eslint-plugin-svelte3": "^3.4.1",
    "memgo": "^1.0.0",
    "mongodb-memory-server": "^8.5.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "svelte": "^3.48.0",
    "tiny-glob": "^0.2.9",
    "typescript": "^4.6.4"
  }
}
