{
  "name": "glopen",
  "version": "0.0.0",
  "private": true,
  "description": "Mono repo for the glopen CLI and reusable routes and controllers.",
  "type": "module",
  "scripts": {
    "clean": "pnpm run clean -r && rm -rf node_modules",
    "test": "pnpm run test -r",
    "prepare": "run-p prepare:*",
    "prepare:definition-readme": "node scripts/build-definition-readme.js",
    "prepare:shared-readme": "node scripts/build-shared-readme.js",
    "prepare:copy-license": "node scripts/copy-license-to-folders.js",
    "prepare:package-jsons": "node scripts/make-package-json-files-consistent.js",
    "make": "pnpm run prepare && run-p make:*",
    "make:recursive": "pnpm run build -r --if-present",
    "deploy": "pnpm run deploy -r",
    "old": "-----------------------",
    "build-demo": "mkdir -p example/build && node bin.js -c",
    "postbuild-demo": "node example/openapijson.js && ajv-openapi-compile --definition example/build/generated.json --output example/build/schemas.cjs",
    "start-simple": "node example/polka.js",
    "start-advanced": "node example/polka-ajv.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/saibotsivad/glopen.git"
  },
  "license": "SEE LICENSE IN LICENSE.md",
  "bugs": {
    "url": "https://github.com/saibotsivad/glopen/issues"
  },
  "homepage": "https://github.com/saibotsivad/glopen",
  "devDependencies": {
    "@saibotsivad/eslint-config-saibotsivad": "^0.0.4",
    "eslint": "^8.1.0",
    "rimraf": "^3.0.2",
    "tiny-glob": "^0.2.9"
  },
  "dependencies": {
    "npm-run-all": "^4.1.5"
  }
}